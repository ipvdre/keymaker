# Example:
# [newyork]
# nyc_router_1 ansible_host=10.1.1.1
# nyc_switch_1 ansible_host=10.1.1.2
# nyc_firewall_1 ansible_host=10.1.1.3

# =====================================================
# Device categorization by type
# =====================================================

[firewalls]
# Firewall devices will be added here

[routers]
# Router devices will be added here

[layer2_switches]
# Layer 2 switch devices will be added here

[layer3_switches]
# Layer 3 switch devices will be added here

[all_switches:children]
layer2_switches
layer3_switches

[all_devices:children]
firewalls
routers
all_switches
